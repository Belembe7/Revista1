{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Iniciar Backend Flask",
            "type": "shell",
            "command": "python",
            "args": ["main.py"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "isBackground": true,
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Iniciar Frontend Expo",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "clear": true
            },
            "isBackground": true,
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}


