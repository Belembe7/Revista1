{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "cwd": "${workspaceFolder}/backend"
        }
    ]
}




